div(ng-controller='OepController' class="search-background")
    div(class="col-sm-6 col-xs-12 input-container")
        input(type="text", name="situation", placeholder="What's my situation?", class="search-input situation-input")
    div(class="col-sm-6 col-xs-12 input-container")
        ui-select(multiple ng-model="need" theme="select2" ng-disabled="disabled" style="width: 100%;" class="search-input need-input")
            ui-select-match(placeholder="What do I need?")
                p {{$item.name}}
            ui-select-choices(repeat="oepterm in oepterms | filter:$select.search")
                p {{oepterm.name}}